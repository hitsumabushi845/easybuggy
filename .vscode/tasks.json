{
	// See https://go.microsoft.com/fwlink/?LinkId=733558
	// for the documentation about the tasks.json format
	"version": "2.0.0",
	"tasks": [
		{
			"label": "run",
			"type": "shell",
			"command": "mvn clean install exec:exec",
			"isBackground": true,
			"problemMatcher": {
				"owner": "custom",
				"pattern": {
					"regexp": "^[ERROR].*$"
				},
				"background": {
					"activeOnStart": true,
					"beginsPattern": ".*[INFO] Scanning for projects.*",
					"endsPattern": ".*INFO: Starting ProtocolHandler.*"
				}
			}
		},
		{
			"label": "stop",
			"type": "shell",
			"command": "${command:workbench.action.terminal.kill}"
		}
	]
}